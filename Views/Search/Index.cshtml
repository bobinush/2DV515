@model List<ScoreViewModel>

@{
    ViewData["Title"] = "A3 – Search Engine";
}

<div class="row">
    <div class="col-md-8">
        <form class="form-inline">
            <div class="form-group">
                <label for="search">Search</label>
                <input type="text" id="search" class="form-control" name="query">
            </div>
            <button type="submit" class="btn btn-default">Search</button>
        </form>
    </div>
</div>


<div class="row">
    <div class="col-md-8">
        <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Score</th>
                        <th>Content</th>
                        <th>Location</th>
                        <th>Distance</th>
                    </tr>
                </thead>
            <tbody>
                @foreach (var result in Model)
                {
                <tr>
                    <td>@result.Url</td>
                    <td>@result.Score</td>
                    <td>@result.ScoreContent</td>
                    <td>@result.ScoreLocation</td>
                    <td>@result.ScoreDistance</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>