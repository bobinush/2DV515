@model IEnumerable<User>

@{
    ViewData["Title"] = "A1 – Recommendation System";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr style="cursor:pointer;" onclick="location.href = '@(Url.Action("View", "Users", new { id = user.Id }))'">
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
